title "swnc: e theory=band xc=pbe formula=Cu4 charge=0 mult=1"
#machinejob:expert

echo

start pspw_pbe_Cu4i

memory 1900 mb

charge 0

geometry noautoz nocenter noautosym
system crystal
   lattice_vectors
     3.620000 0.000000 0.000000
     0.000000 3.620000 0.000000
     0.000000 0.000000 3.620000
end

Cu 0.000000 0.000000 0.000000
Cu 0.000000 0.500000 0.500000
Cu 0.500000 0.000000 0.500000
Cu 0.500000 0.500000 0.000000
end



nwpw
  xc pbe96
  cutoff 50.0 200.0
  #time_step 0.8
  scf ks-grassmann-cg anderson alpha 0.15
  #smear  fixed filling [0 0 0.3333333 0.3333333 0.3333334]
  #smear  fixed 
  smear  gaussian
   #smear  fixed 
   loop 10 10
   #tolerances 1.0e-9 1.0e-9
   #vectors output jjj.movecs
   #virtual 4 0
   steepest_descent
     loop 10 100
     tolerances 1.0e-10 1.0e-10
   end
end
#task band energy
task band steepest_descent
